{
  "name": "storyline",
  "version": "1.0.0",
  "description": "Storyline is a tool for journalists to provide narrative context to readable line charts in a form which is optimized for the mobile user experience.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NUKnightLab/storyline.git"
  },
  "author": "Divya Sasidharan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NUKnightLab/storyline/issues"
  },
  "homepage": "https://github.com/NUKnightLab/storyline#readme",
  "dependencies": {
    "http-server": "^0.9.0",
    "ncp": "^2.0.0",
    "node-sass": "^3.8.0",
    "parallelshell": "^2.0.0",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "chokidar": "^1.6.0",
    "cssmin": "^0.4.3",
    "exit-hook": "^1.1.1",
    "fs-extra": "^0.30.0",
    "globby": "^5.0.0",
    "json-loader": "^0.5.4",
    "lodash": "^4.13.1",
    "rimraf": "^2.5.3",
    "shelljs": "^0.7.0",
    "tiny-lr": "^0.2.1"
  },
  "scripts": {
    "start": "parallelshell 'webpack --watch' 'npm run watch' 'npm run server'",
    "prestart": "npm run clean && webpack && npm run compile",
    "dist": "webpack -p && npm run compile && node tasks/minify-css.js",
    "clean": "rimraf dist/",
    "watch": "node tasks/watch.js",
    "server": "http-server ./dist -c-1",
    "compile": "npm run copy && npm run sass",
    "copy": "ncp src/index.html dist/index.html --stopOnErr",
    "sass": "node-sass -o dist/css -q --output-style compact src/scss/",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
